<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SubExplore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SubExplore"
    xmlns:map="clr-namespace:SubExplore.Views.Map"
    xmlns:spots="clr-namespace:SubExplore.Views.Spots"
    xmlns:favorites="clr-namespace:SubExplore.Views.Favorites"
    xmlns:profile="clr-namespace:SubExplore.Views.Profile"
    xmlns:admin="clr-namespace:SubExplore.Views.Admin"
    xmlns:auth="clr-namespace:SubExplore.Views.Auth"
    xmlns:controls="clr-namespace:SubExplore.Controls"
    xmlns:viewmodels="clr-namespace:SubExplore.ViewModels"
    xmlns:converters="clr-namespace:SubExplore.Helpers.Converters"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="White" 
    Shell.ForegroundColor="Black"
    Shell.TitleColor="Black"
    FlyoutIcon="hamburger.svg"
    FlyoutBackgroundColor="{StaticResource Primary}"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="SubExplore"
    x:Name="AppShellRoot">
    
    <Shell.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:BooleanMultiValueConverter x:Key="BooleanMultiValueConverter" />
        </ResourceDictionary>
    </Shell.Resources>

    <!-- Navigation Header Template - Style du menu de la carte -->
    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Frame BackgroundColor="{StaticResource Primary}"
                   Padding="20"
                   CornerRadius="0"
                   HasShadow="False"
                   Margin="0">
                <Grid ColumnDefinitions="Auto,*,60">

                    <!-- App Logo/Icon -->
                    <Frame Grid.Column="0"
                           BackgroundColor="White"
                           CornerRadius="30"
                           Padding="5"
                           WidthRequest="60"
                           HeightRequest="60"
                           HasShadow="False">
                        <Image Source="icone_subexplore.svg"
                               WidthRequest="50"
                               HeightRequest="50"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <!-- User Info -->
                    <StackLayout Grid.Column="1"
                               Margin="15,0,15,0"
                               VerticalOptions="Center">
                        <Label x:Name="UserNameLabel"
                               Text="Utilisateur SubExplore"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <Label Text="Explorez les profondeurs"
                               FontSize="14"
                               TextColor="White"
                               Opacity="0.8" />
                    </StackLayout>

                    <!-- User Avatar -->
                    <Frame Grid.Column="2"
                           BackgroundColor="White"
                           CornerRadius="30"
                           Padding="0"
                           WidthRequest="60"
                           HeightRequest="60"
                           HasShadow="False">
                        <Image Source="user_avatar_placeholder.png"
                               WidthRequest="30"
                               HeightRequest="30"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Aspect="AspectFit" />
                    </Frame>
                </Grid>
            </Frame>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <Shell.FlyoutContentTemplate>
        <DataTemplate>
            <ScrollView BackgroundColor="{StaticResource Background}">
                <StackLayout Spacing="0" x:Name="FlyoutMenuContainer">
                    
                    <!-- Navigation Section -->
                    <Label Text="Navigation"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           Margin="15,15,15,5" />
                    
                    <!-- Carte -->
                    <controls:StagedMenuButton 
                        Title="Carte"
                        Description="Explorer les spots de plongée"
                        Icon=""
                        Stage="Default"
                        ShowIcon="True"
                        ShowDescription="True"
                        ShowBadge="False"
                        Tapped="OnMenuButtonTapped"
                        CommandParameter="///map"
                        AccessibilityName="Carte, explorer les spots de plongée"
                        AccessibilityDescription="Afficher la carte avec tous les spots de plongée disponibles"
                        AccessibilityHint="Appuyez deux fois pour ouvrir la carte"
                        IconAccessibilityText="Icône de carte" />
                    
                    <!-- Mes Spots Section -->
                    <Label Text="Mes Spots"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           Margin="15,15,15,5" />
                    
                    <!-- Mes Spots -->
                    <controls:StagedMenuButton 
                        Title="Mes Spots"
                        Description="Spots que vous avez créés"
                        Icon=""
                        Stage="Default"
                        ShowIcon="True"
                        ShowDescription="True"
                        ShowBadge="False"
                        Tapped="OnMenuButtonTapped"
                        CommandParameter="///myspots"
                        AccessibilityName="Mes Spots, voir vos spots créés"
                        AccessibilityDescription="Afficher la liste des spots de plongée que vous avez ajoutés"
                        AccessibilityHint="Appuyez deux fois pour voir vos spots"
                        IconAccessibilityText="Icône de localisation" />
                    
                    <!-- Favoris -->
                    <controls:StagedMenuButton 
                        Title="Favoris"
                        Description="Vos spots préférés"
                        Icon=""
                        Stage="Default"
                        ShowIcon="True"
                        ShowDescription="True"
                        ShowBadge="False"
                        Tapped="OnMenuButtonTapped"
                        CommandParameter="///favorites"
                        AccessibilityName="Favoris, vos spots préférés"
                        AccessibilityDescription="Afficher vos spots de plongée favoris sauvegardés"
                        AccessibilityHint="Appuyez deux fois pour voir vos favoris"
                        IconAccessibilityText="Icône d'étoile" />
                    
                    <!-- Profil Section -->
                    <Label Text="Profil"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           Margin="15,15,15,5" />
                    
                    <!-- Profil -->
                    <controls:StagedMenuButton 
                        Title="Profil"
                        Description="Votre profil utilisateur"
                        Icon=""
                        Stage="Default"
                        ShowIcon="True"
                        ShowDescription="True"
                        ShowBadge="False"
                        Tapped="OnMenuButtonTapped"
                        CommandParameter="///userprofile" />
                    
                    
                    <!-- Statistiques -->
                    <controls:StagedMenuButton 
                        Title="Statistiques"
                        Description="Vos statistiques de plongée"
                        Icon=""
                        Stage="Default"
                        ShowIcon="True"
                        ShowDescription="True"
                        ShowBadge="False"
                        Tapped="OnMenuButtonTapped"
                        CommandParameter="///userstats" />
                    
                    <!-- Administration Section -->
                    <Label Text="Administration"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           Margin="15,15,15,5" />
                    
                    <!-- Validation des Spots -->
                    <controls:StagedMenuButton 
                        Title="Validation des Spots"
                        Description="Administration des spots"
                        Icon=""
                        Stage="Warning"
                        ShowIcon="True"
                        ShowDescription="True"
                        ShowBadge="True"
                        BadgeText="3"
                        Tapped="OnMenuButtonTapped"
                        CommandParameter="///spotvalidation"
                        AccessibilityName="Validation des Spots, administration, attention requise"
                        AccessibilityDescription="Gérer et valider les spots soumis par les utilisateurs. 3 spots en attente de validation"
                        AccessibilityHint="Appuyez deux fois pour accéder à l'administration"
                        IconAccessibilityText="Icône de balance de justice" />
                    
                    <!-- Logout Button -->
                    <controls:StagedMenuButton 
                        Title="Déconnexion"
                        Description=""
                        Icon=""
                        Stage="Error"
                        ShowIcon="True"
                        ShowDescription="False"
                        ShowBadge="False"
                        Tapped="OnLogoutButtonTapped"
                        Margin="15,20,15,15" />
                    
                </StackLayout>
            </ScrollView>
        </DataTemplate>
    </Shell.FlyoutContentTemplate>

    <!-- Main Navigation Content - Hidden FlyoutItems for routing -->
    <ShellContent
        Title="Carte"
        ContentTemplate="{DataTemplate map:MapPage}"
        Route="map" />

    <!-- Hidden routes for navigation -->
    <ShellContent
        Title="Mes Spots"
        ContentTemplate="{DataTemplate spots:MySpotsPage}"
        Route="myspots"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Favoris"
        ContentTemplate="{DataTemplate favorites:FavoriteSpotsPage}"
        Route="favorites"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Profil"
        ContentTemplate="{DataTemplate profile:UserProfilePage}"
        Route="userprofile"
        FlyoutItemIsVisible="False" />


    <ShellContent
        Title="Statistiques"
        ContentTemplate="{DataTemplate profile:UserStatsPage}"
        Route="userstats"
        FlyoutItemIsVisible="False" />

    <!-- Modal Pages - Outside main navigation -->
    <!-- Add Spot Page Route -->
    <ShellContent
        Title="Ajouter un Spot"
        ContentTemplate="{DataTemplate spots:AddSpotPage}"
        Route="addspot" />

    <!-- Spot Details Page Route -->
    <ShellContent
        Title="Détails du Spot"
        ContentTemplate="{DataTemplate spots:SpotDetailsPage}"
        Route="spotdetails" />

    <!-- Admin route - Hidden -->
    <ShellContent
        Title="Validation des Spots"
        ContentTemplate="{DataTemplate admin:SpotValidationPage}"
        Route="spotvalidation"
        FlyoutItemIsVisible="False" />

    <!-- Authentication routes - Hidden from flyout -->
    <ShellContent
        Title="Connexion"
        ContentTemplate="{DataTemplate auth:ProductionLoginPage}"
        Route="login"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Title="Inscription"
        ContentTemplate="{DataTemplate auth:RegistrationPage}"
        Route="register"
        FlyoutItemIsVisible="False" />

</Shell>
