<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SubExplore.Views.Auth.ProductionLoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:SubExplore.Helpers.Converters"
    xmlns:viewmodels="clr-namespace:SubExplore.ViewModels.Auth"
    x:DataType="viewmodels:LoginViewModel"
    Title="{Binding Title}"
    BackgroundColor="{AppThemeBinding Light=#F8FDFF, Dark={StaticResource BackgroundDark}}"
    Shell.NavBarIsVisible="False">

    <!-- Resources removed to test converter issue -->

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="30,60,30,30">
            
            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="30" Margin="0,0,0,50">
                <!-- App Logo/Icon -->
                <Frame BackgroundColor="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                       CornerRadius="35"
                       HeightRequest="70"
                       WidthRequest="70"
                       HorizontalOptions="Center"
                       HasShadow="False"
                       BorderColor="Transparent">
                    <Label Text="S"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light=White, Dark={StaticResource PrimaryDarkText}}" />
                </Frame>

                <!-- Welcome Text -->
                <StackLayout Spacing="12">
                    <Label Text="Bienvenue sur SubExplore"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="Découvrez et partagez les plus beaux spots de plongée"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#666666, Dark={StaticResource TextSecondary}}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,0,0,10" />
                </StackLayout>
            </StackLayout>

            <!-- Login Form -->
            <StackLayout Grid.Row="1" Spacing="25">
                
                <!-- Error Message -->
                <Frame BackgroundColor="{AppThemeBinding Light=#E63946, Dark={StaticResource Error}}"
                       CornerRadius="12"
                       Padding="20,15"
                       IsVisible="{Binding HasLoginError}"
                       BorderColor="Transparent"
                       HasShadow="False">
                    <Label Text="{Binding LoginErrorMessage}"
                           TextColor="White"
                           FontSize="14"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </Frame>

                <!-- Login Credentials Card -->
                <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark={StaticResource SurfaceDark}}"
                       BorderColor="{AppThemeBinding Light=#C8C8C8, Dark={StaticResource BorderColorDark}}"
                       CornerRadius="12"
                       HasShadow="False"
                       Padding="25,30"
                       Margin="0,10">
                    <StackLayout Spacing="25">
                        
                        <!-- Email Field -->
                        <StackLayout Spacing="10">
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Adresse email"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#333333, Dark={StaticResource TextPrimary}}"
                                       VerticalOptions="Center" />
                                
                                <Label Text="✓"
                                       FontSize="14"
                                       TextColor="#28a745"
                                       IsVisible="{Binding IsEmailValid}"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            
                            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark={StaticResource SurfaceDark}}"
                                   BorderColor="{AppThemeBinding Light=#C8C8C8, Dark={StaticResource BorderColorDark}}"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   Padding="0">
                                <Entry Text="{Binding Email}"
                                       Placeholder="admin@subexplore.com"
                                       Keyboard="Email"
                                       FontSize="16"
                                       TextColor="{AppThemeBinding Light=#333333, Dark={StaticResource TextPrimary}}"
                                       PlaceholderColor="{AppThemeBinding Light=#919191, Dark={StaticResource Gray400}}"
                                       BackgroundColor="Transparent"
                                       Margin="20,0"
                                       HeightRequest="50"
                                       ReturnType="Next" />
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame" Binding="{Binding IsEmailValid}" Value="True">
                                        <Setter Property="BorderColor" Value="#28a745" />
                                    </DataTrigger>
                                </Frame.Triggers>
                            </Frame>
                        </StackLayout>

                        <!-- Password Field -->
                        <StackLayout Spacing="10">
                            <StackLayout Orientation="Horizontal" Spacing="8">
                                <Label Text="Mot de passe"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#333333, Dark={StaticResource TextPrimary}}"
                                       VerticalOptions="Center" />
                                
                                <Label Text="✓"
                                       FontSize="14"
                                       TextColor="#28a745"
                                       IsVisible="{Binding IsPasswordValid}"
                                       VerticalOptions="Center" />
                            </StackLayout>
                            
                            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark={StaticResource SurfaceDark}}"
                                   BorderColor="{AppThemeBinding Light=#C8C8C8, Dark={StaticResource BorderColorDark}}"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   Padding="0">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Entry Grid.Column="0"
                                           Text="{Binding Password}"
                                           Placeholder="Minimum 8 caractères"
                                           IsPassword="True"
                                           FontSize="16"
                                           TextColor="{AppThemeBinding Light=#333333, Dark={StaticResource TextPrimary}}"
                                           PlaceholderColor="{AppThemeBinding Light=#919191, Dark={StaticResource Gray400}}"
                                           BackgroundColor="Transparent"
                                           Margin="20,0,0,0"
                                           HeightRequest="50"
                                           ReturnType="Go" />
                                    
                                    <Button Grid.Column="1"
                                            Text="👁️"
                                            FontSize="18"
                                            BackgroundColor="Transparent"
                                            TextColor="{AppThemeBinding Light=#6E6E6E, Dark={StaticResource Gray400}}"
                                            Padding="15"
                                            Command="{Binding TogglePasswordVisibilityCommand}" />
                                </Grid>
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame" Binding="{Binding IsPasswordValid}" Value="True">
                                        <Setter Property="BorderColor" Value="#28a745" />
                                    </DataTrigger>
                                </Frame.Triggers>
                            </Frame>
                        </StackLayout>

                        <!-- Remember Me -->
                        <StackLayout Orientation="Horizontal" Spacing="12" Margin="0,5,0,0">
                            <CheckBox IsChecked="{Binding RememberMe}"
                                      Color="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}" />
                            <Label Text="Se souvenir de moi"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#666666, Dark={StaticResource TextSecondary}}"
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                    </StackLayout>
                </Frame>

                <!-- Login Button with Progress -->
                <StackLayout Spacing="8">
                    <!-- Progress Bar -->
                    <ProgressBar Progress="{Binding LoginProgress}"
                                 ProgressColor="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                                 BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark={StaticResource Gray700}}"
                                 HeightRequest="4"
                                 IsVisible="{Binding IsLoginInProgress}" />
                    
                    <Button Text="Se connecter"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="55"
                            Margin="0,5"
                            IsEnabled="{Binding CanLogin}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding IsLoginInProgress}" Value="True">
                                <Setter Property="Text" Value="⏳ Connexion..." />
                                <Setter Property="BackgroundColor" Value="#4A90A4" />
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding CanLogin}" Value="False">
                                <Setter Property="BackgroundColor" Value="#CCCCCC" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </StackLayout>

                <!-- Forgot Password Link -->
                <Button Text="Mot de passe oublié ?"
                        Command="{Binding NavigateToForgotPasswordCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                        FontSize="14"
                        FontAttributes="Bold"
                        Padding="0"
                        HorizontalOptions="Center"
                        Margin="0,5,0,0" />

                <!-- Divider -->
                <StackLayout Orientation="Horizontal" Spacing="15" Margin="0,30,0,20">
                    <BoxView BackgroundColor="{AppThemeBinding Light=#ACACAC, Dark={StaticResource Gray600}}"
                             HeightRequest="1"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand" />
                    <Label Text="ou"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#6E6E6E, Dark={StaticResource Gray400}}"
                           VerticalOptions="Center" />
                    <BoxView BackgroundColor="{AppThemeBinding Light=#ACACAC, Dark={StaticResource Gray600}}"
                             HeightRequest="1"
                             VerticalOptions="Center"
                             HorizontalOptions="FillAndExpand" />
                </StackLayout>

                <!-- Continue Without Login button removed - authentication required -->
            </StackLayout>

            <!-- Footer Section -->
            <StackLayout Grid.Row="2" Spacing="15" Margin="0,40,0,20">
                
                <!-- Registration Link -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center" 
                             Spacing="8">
                    <Label Text="Pas encore de compte ?"
                           FontSize="15"
                           TextColor="{AppThemeBinding Light=#666666, Dark={StaticResource TextSecondary}}"
                           VerticalOptions="Center" />
                    
                    <Button Text="S'inscrire"
                            Command="{Binding NavigateToRegistrationCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                            FontSize="15"
                            FontAttributes="Bold"
                            Padding="0"
                            VerticalOptions="Center" />
                </StackLayout>

                <!-- Version Info -->
                <Label Text="SubExplore v1.0 - Explorez en toute sécurité"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#919191, Dark={StaticResource Gray400}}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,15,0,0" />
            </StackLayout>

        </Grid>
    </ScrollView>

    <!-- Enhanced Loading Overlay -->
    <Grid IsVisible="{Binding IsLoginInProgress}"
          BackgroundColor="{AppThemeBinding Light=#80000000, Dark=#C0000000}">
        <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark={StaticResource SurfaceDark}}"
               CornerRadius="16"
               WidthRequest="160"
               HeightRequest="140"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HasShadow="True"
               BorderColor="Transparent">
            <StackLayout Spacing="20"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsLoginInProgress}"
                                   Color="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                                   WidthRequest="50"
                                   HeightRequest="50" />
                
                <StackLayout Spacing="8">
                    <Label Text="🔐 Connexion en cours..."
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333333, Dark={StaticResource TextPrimary}}"
                           HorizontalOptions="Center" />
                    
                    <ProgressBar Progress="{Binding LoginProgress}"
                                 ProgressColor="{AppThemeBinding Light=#006994, Dark={StaticResource PrimaryDark}}"
                                 BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark={StaticResource Gray700}}"
                                 HeightRequest="6"
                                 WidthRequest="120"
                                 HorizontalOptions="Center" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </Grid>

</ContentPage>