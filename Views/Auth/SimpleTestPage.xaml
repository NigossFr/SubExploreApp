<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SubExplore.Views.Auth.SimpleTestPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Page de Test"
             BackgroundColor="LightBlue">
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Page de Test SubExplore" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="DarkBlue" />
            
            <Label Text="Ceci est un test simple pour vérifier que l'interface utilisateur fonctionne correctement."
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="DarkBlue" />
            
            <Entry x:Name="EmailEntry" 
                   Placeholder="admin@subexplore.com"
                   Text="admin@subexplore.com"
                   FontSize="16" />
            
            <Entry x:Name="PasswordEntry"
                   Placeholder="Admin123!"
                   Text="Admin123!"
                   IsPassword="True"
                   FontSize="16" />
            
            <Button Text="Test de Connexion"
                    Clicked="OnTestLoginClicked"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    FontSize="16"
                    HeightRequest="50" />
            
            <Label x:Name="StatusLabel"
                   Text="Prêt pour le test"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="DarkGreen" />
                   
            <Button Text="Aller à la vraie page de connexion"
                    Clicked="OnRealLoginClicked"
                    BackgroundColor="Green"
                    TextColor="White"
                    FontSize="14"
                    HeightRequest="40" />
                    
            <Label Text="Informations de débogage :"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="DarkRed" />
                   
            <Label x:Name="DebugLabel"
                   Text="Chargement des informations de débogage..."
                   FontSize="12"
                   TextColor="DarkRed" />
        </StackLayout>
    </ScrollView>
    
</ContentPage>